@model Digitalogygroup.Web.Pages.Admin.Content.IndexModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">لیست محتوا </h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">

    @*Grid*@
    <div class="col-md-8">
        <div class="panel panel-success">

            <div class="panel-heading">
                لیست محتوا 
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

  <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            @*<a asp-page="Create" class="btn btn-outline btn-success">افزودن محتوای جدید</a>*@

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان</th> 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gp in Model.ContentList )
                                {
                                    <tr>
                                        <td>@gp.Id</td>
                                        <td>@gp.Title  </td>                                       
                                        <td>
                                            <a href="/Admin/Content/Edit/@gp.Id" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>




            </div>

        </div>
    </div>

 
</div>

