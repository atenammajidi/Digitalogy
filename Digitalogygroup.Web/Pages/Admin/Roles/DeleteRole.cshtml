@page "{id}"
@model Digitalogygroup.Web.Pages.Admin.Roles.DeleteRoleModel
@{
    ViewData["Title"] = "حذف نقش";
}

<div class="container alert alert-danger">
    <form method="post">
        <input type="hidden" asp-for="Role.Id" />
        <input type="hidden" asp-for="Role.RoleTitleFa" />
        <input type="hidden" asp-for="Role.RoleTitleEn" />
        <h4>آیا از حذف نقش "@Model.Role.RoleTitleFa" مطمئن هستید؟ </h4>
        <p>
            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger" />
            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>

