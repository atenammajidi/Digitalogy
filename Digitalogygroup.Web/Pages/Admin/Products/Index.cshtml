@page
@model Digitalogygroup.Web.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">لیست محصولات</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">


        <div class="panel panel-success">

            <div class="panel-heading">
                لیست محصولات
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">




                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateProduct" class="btn btn-outline btn-success">افزودن محصول جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام محصول</th>
                                    <th>نام سرگروه</th>
                                    <th>زبان</th>
                                    <th>شرح کوتاه محصول</th>
                                    <th>وضعیت</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gp in Model.VM)
                                {
                                    <tr>
                                        <td>@gp.ProductTitle</td>
                                        <td>@gp.GroupTitle</td>
                                        <td>@gp.Language</td>
                                        <td>@gp.ProdShortDesc</td>
                                        <td>

                                            @if (gp.IsActive)
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">غیر فعال</p>
                                            }

                                        </td>
                                        <td>
                                            <a href="/Admin/Products/EditProduct/@gp.ProdID" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>

                                            <a href="/Admin/Products/AddMorePic/@gp.ProdID" class="btn btn-danger btn-sm">
                                               افزودن تصویر
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>




            </div>

        </div>


</div>


